@model VIMS.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}

<style>
    .input-group-prepend, .form-control {
        height: 40px !important;
    }

    .modal-dialog {
        max-width: 90% !important;
    }

</style>
<div class="col-lg-5 login-half-bg d-flex flex-row shadow-lg" style="background-image: url(../../Content/images/auth/IMG_32785.jpg);">
    <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2018  All rights reserved.</p>
</div>
<div class="col-lg-7 d-flex align-items-center justify-content-center" style="overflow-y:scroll;">
    <div class="auth-form-transparent text-left p-3 w-100">
        <div class="brand-logo">
            <img src="~/Content/images/logo.svg" alt="logo">
        </div>
        <h4>
            New here? <span class="font-weight-light h6">Join us today! It takes only few steps.</span>
        </h4>
        <br />
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#loginModal">
            Go Ahead !!
        </button>
        

        <script>
            $('#exampleModal').on('show.bs.modal', event => {
                var button = $(event.relatedTarget);
                var modal = $(this);

            });
        </script>


    </div>
</div>


<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Register</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body bg-light">
                <div class="container-fluid">
                    @if (ViewBag.token != null)
                    {
                        <h1>A verification email is sent to '@ViewBag.Email' !</h1>
                    }
                    else
                    {
                        using (Html.BeginForm(null, null, FormMethod.Post, htmlAttributes: new
                        {
                            @class = "pt-1",
                            @autocomplete = "off"
                        }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary();

                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Name)
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-account-outline text-primary">
                                                        <i class="fas fa-user"></i>
                                                    </i>
                                                </span>
                                            </div>
                                            @Html.TextBoxFor(m => m.Name, new
                                            {
                                                placeholder = "Name",
                                                @class = "form-control form - control - lg border - left - 0 w - 75"
                                            })


                                        </div>
                                        <small class="form-text text-muted">
                                            Required. 150 characters or fewer. Letters
                                            only.
                                        </small>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.UserName)
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-account-outline text-primary">
                                                        <i class="fas fa-user"></i>
                                                    </i>
                                                </span>
                                            </div>
                                            @Html.TextBoxFor(m => m.UserName, new
                                            {
                                                placeholder = "Username",
                                                @class =
                                            "form-control form-control-lg border-left-0 w-75"
                                            })

                                        </div>
                                        <small class="form-text text-muted">
                                            Required. 20 characters or fewer. Letters,
                                            digits and @@/./+/-/_ only.
                                        </small>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Email)
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-account-outline text-primary">
                                                        <i class="fas fa-user"></i>
                                                    </i>
                                                </span>
                                            </div>
                                            @Html.TextBoxFor(m => m.Email, new
                                            {
                                                placeholder = "Email address",
                                                @class =
                                            "form-control form-control-lg border-left-0 w-75"
                                            })

                                        </div>
                                        <small class="form-text text-muted">
                                            Required. Email format
                                            someone@@something.com.
                                        </small>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.PhoneNumber)
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-account-outline text-primary">
                                                        <i class="fas fa-user"></i>
                                                    </i>
                                                </span>
                                            </div>
                                            @Html.TextBoxFor(m => m.PhoneNumber, new
                                            {
                                                placeholder = "Contact Number",
                                                @class =
                                            "form-control form-control-lg border-left-0 w-75"
                                            })

                                        </div>
                                        <small class="form-text text-muted">
                                            Required. Contact number format
                                            +92-3XX-XXXXXXX.
                                        </small>
                                    </div>
                                </div>

                                <div class="col">

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password)
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-account-outline text-primary">
                                                        <i class="fas fa-user"></i>
                                                    </i>
                                                </span>
                                            </div>
                                            @Html.PasswordFor(m => m.Password, new
                                            {
                                                placeholder = "Password",
                                                @class =
                                            "form-control form-control-lg border-left-0 w-75"
                                            })

                                        </div>
                                        <small class="form-text text-muted">
                                            <ul>
                                                <li>Required.</li>
                                                <li>
                                                    Your password must contain at least 6 characters. Letters, digits and
                                                    @@/./+/-/_ only.
                                                </li>
                                                <li>
                                                    Your password must have at least one capitalized letter, one digit & one
                                                    symbol.
                                                </li>
                                            </ul>
                                        </small>
                                    </div>
                                    <div class="form-group" style="margin-top:-8px;">
                                        @Html.LabelFor(m => m.ConfirmPassword)
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-account-outline text-primary">
                                                        <i class="fas fa-user"></i>
                                                    </i>
                                                </span>
                                            </div>
                                            @Html.PasswordFor(m => m.ConfirmPassword, new
                                            {
                                                placeholder = "Password Confirmation",
                                                @class = "form - control form - control - lg border - left - 0 w - 75"
                                            })


                                        </div>
                                        <small class="form-text text-muted">
                                            Enter the same password as before, for
                                            verification.
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-0 p-0">
                                <div class="col">
                                    <div class="form-group p-0">
                                        <div class="col-12 p-0">
                                            <input type="submit" class="btn btn-lg btn-dark w-100" value="Register" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
