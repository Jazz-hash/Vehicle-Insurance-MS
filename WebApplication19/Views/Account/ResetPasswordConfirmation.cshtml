@{
    ViewBag.Title = "Reset password confirmation";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}

<div class="col-lg-6 login-half-bg d-flex flex-row shadow-lg" style="background-image: url(../../Content/images/auth/chris-nguyen-aTX_bRaOZnA-unsplash.jpg);background-size:cover;">
    <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2018  All rights reserved.</p>
</div>


<div class="col-lg-6 d-flex align-items-center justify-content-center">
    <div class="auth-form-transparent text-left p-3">
        <div class="brand-logo">
            <img src="~/Content/images/logo.svg" alt="logo">
        </div>
        <h4>
            Oops !! You forgot your password.<br />
        </h4>
        <h5>
            Don't worry just head to the link sent to your email
        </h5>
        <br />
        <h6 class="font-weight-light">
            If this wasn't you. Just @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </h6>


    </div>
</div>

