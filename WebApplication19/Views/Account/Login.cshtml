@using CFMS.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="col-lg-6 d-flex align-items-center justify-content-center">
    <div class="auth-form-transparent text-left p-3">
        <div class="brand-logo text-center">
            <h1 style="font-family:Pacifico">CFMS</h1>
        </div>
        <div class="row mt-2">
            <div class="col-6">
                <img class="float-right" src="~/Content/images/auth/HU logo.jpg" height="100px" />
            </div>
            <div class="col-6" style="border-left: 1px solid #000">
                <img class="float-left" src="~/Content/images/auth/HU logo.jpg" height="100px" />
            </div>
        </div>
        <br />
        <br />
        <h4>Welcome back!</h4>
        @using (Html.BeginForm(null, null, FormMethod.Post, htmlAttributes: new { @class = "pt-2" }))
        {
            @Html.AntiForgeryToken()
            if (ViewBag.Errors == true)
            {
                <div class="alert alert-danger pb-0">
                    @Html.ValidationSummary(true, "", new { @class = "" })
                </div>

            }
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-account-outline text-dark"><i class="fa fa-user" aria-hidden="true"></i></i>
                        </span>
                    </div>
                    @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control form-control-lg border-left-0", placeholder = "Email" })
                </div>

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-lock-outline text-dark"><i class="fas fa-lock"></i></i>
                        </span>
                    </div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg border-left-0", placeholder = "Password" })
                </div>
            </div>
            <div class="my-2 d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <label class="form-check-label text-muted">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-control form-check-input" })
                        Keep me signed in
                    </label>
                </div>
                <a href="/Account/ForgotPassword" class="auth-link text-black">Forgot password?</a>
            </div>
            <div class="my-3">
                <input class="btn btn-block btn-dark btn-lg font-weight-medium auth-form-btn" type="submit" value="LOGIN" />
            </div>
            <div class="text-center mt-4 font-weight-light text-dark">
                Don't have an account? <a href="/Account/Register" class="text-primary">Create</a>
            </div>
        }

    </div>
</div>
<div class="col-lg-6 login-half-bg d-flex flex-row shadow-lg" style="background-image: url(../../Content/images/auth/background.jpg);">
    <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; @DateTime.Now.Year  All rights reserved.</p>
</div>
