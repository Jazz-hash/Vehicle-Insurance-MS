@model CFMS.Models.Contact
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="bg-dark">
    <br />
    <br />
    <br />
    <br />
</div>

@{
    ViewBag.Title = "ABOUT US";
    ViewBag.Message = "What we are !!";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";


}

<div class="col-lg-6 d-flex align-items-center justify-content-center">
    <div class="auth-form-transparent text-left p-3">
        <div class="brand-logo text-center">
            <h1 style="font-family:Pacifico">CFMS</h1>
        </div>
        <div class="row mt-2">
            <div class="col-6">
                <img class="float-right" src="~/Content/images/auth/HU logo.jpg" height="100px" />
            </div>
            <div class="col-6" style="border-left: 1px solid #000">
                <img class="float-left" src="~/Content/images/auth/HU logo.jpg" height="100px" />
            </div>
        </div>
        <br />
        <br />
        @if (ViewBag.Success != "")
        {
            <div class="alert alert-success">
                <strong>Success !</strong> Our admins will reach out to you soon.
            </div>
        }
        <form id="contact-form">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="input-box">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @name = "", @required = "required", placeholder = "First Name *" } })
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="input-box">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @name = "", @required = "required", placeholder = "Last Name *" } })

                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 mt-2">
                        <div class="input-box">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @name = "", @required = "required", placeholder = "Email *" } })

                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 mt-2">
                        <div class="input-box">
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @name = "", @required = "required", placeholder = "Phone *" } })

                        </div>
                    </div>
                    <div class="col-lg-12 mt-2">
                        <div class="input-box">
                            @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @name = "", @required = "required", placeholder = "Your Message *" })
                        </div>
                    </div>
                </div>
                <div class="contact-submit-btn text-center mt-4">
                    <input type="submit" class="btn w-100 btn-dark" value="Submit Now" />
                </div>
            }

        </form>
        <div class="my-3">
            <a class="btn btn-block btn-outline-dark btn-lg font-weight-medium auth-form-btn" href="/Account/Login">Go to Login Page</a>
        </div>
        <div class="text-center mt-4 font-weight-light text-dark">
            Don't have an account? <a href="/Account/Register" class="text-primary">Create</a>
        </div>


    </div>
</div>
<div class="col-lg-6 login-half-bg d-flex flex-row shadow-lg" style="background-image: url(../../Content/images/auth/background.jpg);">
    <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; @DateTime.Now.Year  All rights reserved.</p>
</div>


